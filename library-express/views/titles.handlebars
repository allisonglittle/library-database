<main>
    <div>
        <h3>Add Title to TEST Library</h3>
        <!-- <form action="/query_book_api" method="post"> -->
        <form action="/add_title" method="get">
            <p><label for="ISBN">ISBN:</label><br>
                <input type="text" id="ISBN" name="ISBN">
            </p>
            <p><label for="title">Title:</label><br>
                <input type="text" id="title" name="title">
            </p>
            <p><label for="author">Author:</label><br>
                <input type="text" id="author" name="author">
            </p>
            <p><label for="publisher">Publisher:</label><br>
                <input type="text" id="publisher" name="publisher">
            </p>
            <p><label for="datePublished">Date Published:</label><br>
                <input type="date" id="datePublished" name="datePublished">
            </p>
            <p><input type="submit" value="Submit"></p>
        </form>
    </div>
    <table>
        <caption>Titles</caption>
        <thead>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Date Published</th>
        </thead>
        <tbody>
            {{#each titles}}
            <tr>
                <td>{{ISBN}}</td>
                <td>{{bookTitle}}</td>
                <td>{{author}}</td>
                <td>{{publisher}}</td>
                <td>{{datePublished}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</main>