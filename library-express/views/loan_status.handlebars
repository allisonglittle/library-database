<!DOCTYPE html>
<html lang="en">
    <body>
        <h1>Library Inventory Management</h1>
        <form id="addStatus" action="/loan_status" method="post">
            <h1>Add loan status</h1>
            <label>Status: </label>
            <input type="text" name="statusDescription" required><br>
            <p><input type="submit" value="Submit"></p>
        </form>
        <table>
            <caption>Statuses</caption>
            <thead>
                <th>Status ID</th>
                <th>Status Name</th>
            </thead>
            <tbody>
                {{#each statuses}}
                <tr>
                    <td>{{statusID}}</td>
                    <td>{{statusDescription}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </body>
</html>