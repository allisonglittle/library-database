<!DOCTYPE html>
<html lang="en">
    <body>
        <h1>Library Inventory Management</h1>
        <div>
            <h2>Create a Loan</h2>
            <form id="addLoan" action="/create_loan" method="post">
                <p><label>Select the Patron: </label>
                    <select name="patronID" id="patronID">
                        {{#each patrons}}
                        <option value="{{patronID}}">{{lastName}}, {{firstName}}</option>
                        {{/each}}
                    </select></p>
                <p><label for="books">Choose the books: </label>
                    <select name="books" id="bookID" multiple>
                        {{#each books}}
                        <option value="{{bookID}}">{{bookID}} - {{bookTitle}}</option>
                        {{/each}}
                    </select><br></br></p>
                <p>
                    Due Date:  
                    <b><script>
                        var newDate = new Date(Date.now() + 12096e5);
                        document.write(newDate.toDateString());
                    </script></b>
                </p>
                <input type="submit" value="Create Loan">
                <button>
                    Reset
                </button>
            </form>
        </div>
        <div>
            <h2>Loans</h2>
            <table>
                <thead>
                    <tr>
                        <th>Loan ID</th>
                        <th>Patron</th>
                        <th>Loan Date</th>
                        <th>Book Count</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each loans}}
                    <tr>
                        <form>
                            <td>{{loanID}}</td>
                            <td>{{patronName}}</td>
                            <td>{{loanDate}}</td>
                            <td>{{bookCount}}</td>
                            <input type="hidden" id="loanID" name="loanID" value={{loanID}}>
                            <td><button type="submit" formaction="/loan_items" formmethod="get">View Details</button>
                            <td><button type="submit" formaction="/delete_loan" formmethod="post">Delete</button></td>
                        </form>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </body>
</html>
