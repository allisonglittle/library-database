<!DOCTYPE html>
<html lang="en">
    <body>
        <h1>Library Inventory Management</h1>
        <table>
            <caption>Edit Loan Details</caption>
            <thead>
                <th>Loan ID</th>
                <th>Patron</th>
                <th>Book ID</th>
                <th>Title</th>
                <th>Loan Status</th>
                <th>Due Date</th>
                <th>Renewal Count</th>
            </thead>
            <tbody>
                <tr>
                    <form action="/edit_loan_details" method="post">
                        <td>{{loanID}}</td>
                        <td>{{patron}}</td>
                        <td>{{bookID}}</td>
                        <td>{{title}}</td>
                        <td><select id="loan_status" name="loan_status">
                            <option value="{{currentStatusID}}">{{currentStatusDescription}}</option>
                            {{#each statuses}}
                                <option value="{{statusID}}">{{statusDescription}}</option>
                            {{/each}}
                        </select></td>
                        <td><input type="date" id="dueDate" name="dueDate" value="{{dueDate}}"></td>
                        <td><input type="number" id="renewalCount" name="renewalCount" min="0" value="{{renewalCount}}"></td>
                        <br><input type="submit" value="Update">
                    </form>
                </tr>
            </tbody>
        </table>
    </body>
</html>